@using ARISESLCOM.Helpers;
@using SLCOMLIB.Helpers;
@{
    ViewData["Title"] = "Listar Pedidos - Gerência E-commerce";
    string tp = Url.ActionContext.RouteData.Values["tp"] + "";
    string pageTitle = ViewBag.PageTitle ?? PageLabelHelper.HeaderNewOrderDict.GetValueOrDefault(tp, "Lista de Pedidos");
}
@model List<ARISESLCOM.Models.OrderSummaryViewModel>;

<div class="container">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/Order/ListarPrevia">Listar Pedidos</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Html.Raw(pageTitle)</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">@Html.Raw(pageTitle)</h4>
        <span class="badge bg-primary">@Model.Count pedidos</span>
    </div>

    <!-- Orders List -->
    @if (Model.Any())
    {
        <div class="row g-3">
            @foreach (var order in Model)
            {
                <div class="col-12">
                    <div class="card order-card border-0 shadow-sm">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-2">
                                    <div class="order-id-section">
                                        <a asp-area="" asp-controller="Order" asp-action="ShowOrder" asp-route-orderId="@order.PKId" class="order-link">
                                            <h5 class="order-id mb-1">#@order.PKId</h5>
                                        </a>
                                        <small class="text-muted">@order.Data</small>
                                    </div>
                                </div>
                                
                                <div class="col-md-2">
                                    <div class="customer-info">
                                        <h6 class="customer-name mb-1">@order.CustomerName</h6>
                                        <small class="text-muted">
                                            <i class="fas fa-user"></i> @order.ReceiverName @order.ReceiverLastName
                                        </small>
                                    </div>
                                </div>
                                
                                <div class="col-md-4">
                                    <div class="payment-info">
                                        @if (order.ModoPagto.Equals(SLCOMLIB.Helpers.LibConsts.MODO_PAGTO_CARTAO_CREDITO))
                                        {
                                            <div class="payment-method credit-card-info">
                                                <div class="payment-header">
                                                    <span class="payment-badge">💳 @Html.Raw(LibPageLabelHelper.ModoPagtoLabelDict[order.ModoPagto])</span>
                                                    @if (order.Parc > 1)
                                                    {
                                                        <span class="parcelas-badge">@order.Parc parcelas</span>
                                                    }
                                                </div>
                                                <div class="rede-details">
                                                    @await Html.PartialAsync("_rede_info", order)
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="payment-badge">💰 @Html.Raw(LibPageLabelHelper.ModoPagtoLabelDict[order.ModoPagto])</span>
                                        }
                                    </div>
                                </div>
                                
                                <div class="col-md-2">
                                    <div class="status-info">
                                        <small class="text-muted">Status alterado em:</small>
                                        <div class="status-date">@order.DataMdSt</div>
                                    </div>
                                </div>
                                
                                <div class="col-md-2 text-end">
                                    <a asp-area="" asp-controller="Order" asp-action="ShowOrder" asp-route-orderId="@order.PKId" 
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-eye"></i> Ver Pedido
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="empty-state">
                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Nenhum pedido encontrado</h5>
                <p class="text-muted">Não há pedidos com este status no momento.</p>
            </div>
        </div>
    }
</div>

<style>
.order-card {
    transition: all 0.3s ease;
    border-left: 4px solid #007bff;
}

.order-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0,0,0,0.1) !important;
}

.order-link {
    text-decoration: none;
    color: inherit;
}

.order-link:hover {
    text-decoration: none;
    color: inherit;
}

.order-id {
    color: #007bff;
    font-weight: 600;
    margin: 0;
}

.customer-name {
    font-weight: 500;
    color: #333;
    margin: 0;
}

.customer-info small {
    line-height: 1.2;
    word-wrap: break-word;
}

.payment-badge {
    background: #f8f9fa;
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 0.85rem;
    color: #495057;
    display: inline-block;
    margin-bottom: 4px;
}

.credit-card-info {
    background: #f8f9fa;
    border-radius: 8px;
    padding: 12px;
    border-left: 4px solid #28a745;
}

.payment-header {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 8px;
    flex-wrap: wrap;
}

.parcelas-badge {
    background: #e3f2fd;
    color: #1976d2;
    padding: 2px 6px;
    border-radius: 8px;
    font-size: 0.75rem;
    font-weight: 500;
}

.rede-details {
    font-size: 0.8rem;
    line-height: 1.4;
}

.rede-details .text-sm {
    margin-bottom: 4px;
    padding: 2px 0;
}

.status-date {
    font-weight: 500;
    color: #666;
}

.btn-outline-primary {
    border-radius: 20px;
    padding: 6px 16px;
}

.empty-state {
    padding: 2rem;
}

.text-sm {
    font-size: 0.875rem;
    color: #6c757d;
}

@@media (max-width: 768px) {
    .order-card .row {
        flex-direction: column;
    }
    
    .order-card .col-md-2,
    .order-card .col-md-3 {
        margin-bottom: 1rem;
    }
    
    .order-card .col-md-2:last-child {
        text-align: left !important;
        margin-bottom: 0;
    }
}
</style>