@model ARISESLCOM.Models.Entities.UserModel;

<h3>Login</h3>
<div class="col-sm-6">
    <form asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="Name" for="exampleInputEmail1">Nome</label>
            <input asp-for="Name" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
        </div>
        <div class="form-group mt-3">
            <label asp-for="Password" for="exampleInputPassword1">Senha</label>
            <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary mt-2">Enviar</button>
    </form>
</div>
<div class="col-sm-6">
</div>