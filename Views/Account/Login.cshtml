@model ARISESLCOM.Models.Entities.UserModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - ClockWatch</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body class="login-page">
<div class="wrapper">
    <div class="login-container">
        <div class="login-card">
        <div class="login-header">
            <img src="~/images/aqualogo.png" alt="ClockWatch" class="login-logo" />
            <h2 class="login-title">Acesso ao Sistema</h2>
            <p class="login-subtitle">Faça login para acessar o sistema</p>
        </div>
        
        <form asp-action="Login" method="post" class="login-form">
            <div class="form-group">
                <label asp-for="Name" class="form-label">👤 Nome de usuário</label>
                <input asp-for="Name" type="text" class="form-control login-input" placeholder="Digite seu nome de usuário" required>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Password" class="form-label">🔒 Senha</label>
                <input asp-for="Password" type="password" class="form-control login-input" placeholder="Digite sua senha" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-login">
                <span class="btn-text">Entrar</span>
                <span class="btn-icon">→</span>
            </button>
        </form>
        
        @if (!string.IsNullOrEmpty(ViewBag.Hash))
        {
            <div class="hash-info">
                <h6>🔐 Hash gerado:</h6>
                <code class="hash-code">@ViewBag.Hash</code>
            </div>
        }
        
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger login-alert">
                <strong>❌ Erro no login!</strong>
                <p>Verifique suas credenciais e tente novamente.</p>
            </div>
        }
        </div>
    </div>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>

<style>
    body.login-page {
        height: 100vh;
        overflow: hidden;
        margin: 0;
        padding: 0;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    
    body.login-page .wrapper {
        height: 100vh;
        overflow: hidden;
        width: 100%;
        position: relative;
    }
    
    body.login-page .login-container {
        height: 100vh;
        width: 100vw;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 20px;
        overflow: hidden;
        box-sizing: border-box;
        margin: 0;
        position: absolute;
        top: 0;
        left: 0;
    }
    
    .login-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 15px 30px rgba(0,0,0,0.1);
        padding: 30px;
        width: 100%;
        max-width: 420px;
        position: relative;
        overflow: hidden;
    }
    
    .login-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #667eea, #764ba2);
    }
    
    .login-header {
        text-align: center;
        margin-bottom: 25px;
    }
    
    .login-logo {
        height: 50px;
        margin-bottom: 15px;
    }
    
    .login-title {
        color: #2c3e50;
        font-weight: 700;
        margin: 0 0 8px 0;
        font-size: 1.6rem;
    }
    
    .login-subtitle {
        color: #7f8c8d;
        margin: 0;
        font-size: 0.9rem;
    }
    
    .login-form {
        margin-bottom: 15px;
    }
    
    .form-group {
        margin-bottom: 20px;
    }
    
    .form-label {
        display: block;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 6px;
        font-size: 0.85rem;
    }
    
    .login-input {
        border: 2px solid #e9ecef;
        border-radius: 10px;
        padding: 12px 16px;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        background: #f8f9fa;
    }
    
    .login-input:focus {
        border-color: #667eea;
        background: white;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        outline: none;
    }
    
    .btn-login {
        width: 100%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 10px;
        padding: 12px 20px;
        color: white;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        position: relative;
        overflow: hidden;
    }
    
    .btn-login:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
        color: white;
    }
    
    .btn-login:active {
        transform: translateY(0);
    }
    
    .btn-text {
        position: relative;
        z-index: 1;
    }
    
    .btn-icon {
        position: relative;
        z-index: 1;
        font-size: 1.2rem;
        transition: transform 0.3s ease;
    }
    
    .btn-login:hover .btn-icon {
        transform: translateX(5px);
    }
    
    .hash-info {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 15px;
        margin-top: 15px;
        border-left: 4px solid #667eea;
    }
    
    .hash-info h6 {
        color: #2c3e50;
        margin: 0 0 8px 0;
        font-weight: 600;
        font-size: 0.9rem;
    }
    
    .hash-code {
        background: #e9ecef;
        padding: 8px;
        border-radius: 6px;
        font-family: 'Courier New', monospace;
        font-size: 0.75rem;
        word-break: break-all;
        display: block;
        color: #495057;
    }
    
    .login-alert {
        border-radius: 10px;
        border: none;
        background: #fff5f5;
        color: #c53030;
        border-left: 4px solid #e53e3e;
        padding: 12px 15px;
        margin-top: 15px;
        font-size: 0.9rem;
    }
    
    .login-alert strong {
        color: #c53030;
    }
    
    @@media (max-width: 768px) {
        body.login-page {
            height: 100vh;
            overflow: hidden;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        
        body.login-page .login-container {
            padding: 10px;
            height: 100vh;
            width: 100vw;
            overflow: hidden;
            box-sizing: border-box;
            margin: 0;
            position: absolute;
            top: 0;
            left: 0;
        }
        
        .login-card {
            padding: 25px 20px;
            border-radius: 12px;
        }
        
        .login-title {
            font-size: 1.4rem;
        }
        
        .login-logo {
            height: 45px;
        }
        
        .form-group {
            margin-bottom: 18px;
        }
        
        .login-input {
            padding: 10px 14px;
        }
        
        .btn-login {
            padding: 10px 20px;
        }
    }
</style>
